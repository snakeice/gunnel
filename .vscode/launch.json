    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "server",
                "--port",
                "8080"
            ]
        },
        {
            "name": "Launch Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "client",
                "--server-addr",
                "localhost:8081",
                "--subdomain",
                "test",
                "--port",
                "3000"
            ]
        }
    ]
}
